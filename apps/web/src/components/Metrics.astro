---
import { metrics } from "@ai-git/content/web";
---

<section class="px-6 py-24">
  <div class="mx-auto max-w-4xl">
    <h2 class="text-center text-3xl font-bold md:text-4xl">{metrics.headline}</h2>
    <div class="mt-12 grid grid-cols-2 gap-6 md:grid-cols-4">
      {metrics.items.map((item) => (
        <div class="text-center">
          <div class="text-2xl font-bold md:text-3xl">{item.value}</div>
          <div class="mt-1 text-sm text-neutral-500">{item.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
