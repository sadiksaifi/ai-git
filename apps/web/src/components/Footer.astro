---
import { navigation, CLI_NAME } from "@ai-git/content/web";

const socialIcons: Record<string, string> = {
  x: "M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z",
  github: "M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z",
  npm: "M2 21.5V2.5h20v19H12.5V5.357h-3.643V21.5z",
};
---

<footer class="border-t border-neutral-800 px-6 py-16">
  <div class="mx-auto max-w-6xl">
    <div class="grid grid-cols-1 gap-12 md:grid-cols-4">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="flex items-center gap-2 text-lg font-semibold">
          <img src="/favicon.svg" alt="" class="h-7 w-7" />
          {CLI_NAME}
        </a>
        <p class="mt-3 text-sm text-neutral-500">AI-powered Conventional Commits</p>
      </div>

      <!-- Product links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-neutral-500">Product</h3>
        <ul class="mt-4 space-y-3">
          {navigation.footer.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-neutral-400 transition-colors hover:text-white"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resource links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-neutral-500">Resources</h3>
        <ul class="mt-4 space-y-3">
          {navigation.footer.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-neutral-400 transition-colors hover:text-white"
                {...(link.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 flex flex-col items-center justify-between gap-4 border-t border-neutral-800/50 pt-8 md:flex-row">
      <p class="text-sm text-neutral-500">MIT License</p>
      <div class="flex gap-4">
        {navigation.footer.social.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-500 transition-colors hover:text-white"
            aria-label={link.label}
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d={socialIcons[link.icon] ?? ""} />
            </svg>
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
