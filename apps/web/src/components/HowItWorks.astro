---
import { howItWorks } from "@ai-git/content/web";
---

<section class="px-6 py-24">
  <div class="mx-auto max-w-4xl">
    <h2 class="text-center text-3xl font-bold md:text-4xl">{howItWorks.headline}</h2>
    <div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-3">
      {howItWorks.steps.map((step, i) => (
        <div class="relative">
          {/* Connector line (hidden on mobile, hidden on last item) */}
          {i < howItWorks.steps.length - 1 && (
            <div class="absolute top-5 left-10 hidden h-px w-full bg-neutral-800 md:block" />
          )}
          <div class="flex h-10 w-10 items-center justify-center rounded-full border border-neutral-700 bg-neutral-900 text-sm font-semibold">
            {step.step}
          </div>
          <h3 class="mt-4 text-lg font-semibold">{step.title}</h3>
          <code class="mt-2 block rounded-md bg-neutral-900 px-3 py-2 font-mono text-sm text-neutral-300">
            $ {step.command}
          </code>
          <p class="mt-3 text-sm text-neutral-400">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
