{
  "$schema": "https://json.schemastore.org/package",
  "name": "ai-git",
  "version": "0.0.0-git",
  "private": true,
  "description": "A CLI tool that leverages AI to automatically generate semantically correct, Conventional Commits compliant git messages.",
  "author": {
    "name": "Sadik Saifi",
    "email": "mail@sadiksaifi.dev",
    "url": "https://sadiksaifi.dev"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "latest",
      "alchemy": "^0.82.1",
      "oxfmt": "^0.26.0",
      "oxlint": "^1.41.0",
      "turbo": "^2.6.3",
      "typescript": "^5"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:cli": "turbo -F cli dev",
    "dev:web": "turbo -F web dev",
    "build": "turbo build",
    "build:cli": "turbo -F cli build",
    "build:web": "turbo -F web build",
    "preview:web": "turbo -F web preview",
    "typecheck": "turbo typecheck",
    "check": "turbo check",
    "check:fix": "turbo check:fix",
    "test": "turbo test",
    "deploy": "turbo -F @ai-git/infra deploy",
    "destroy": "turbo -F @ai-git/infra destroy",
    "sync:catalog": "turbo -F cli sync:catalog",
    "sync:schema": "turbo -F cli sync:schema",
    "sync:models": "turbo -F cli sync:models",
    "generate:assets": "bun run scripts/generate-logo.ts"
  },
  "devDependencies": {
    "@ai-git/config": "workspace:*",
    "@types/bun": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.9"
}
